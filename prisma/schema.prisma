
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AccountTypes {
    Assets
    Revenue
    Equity
    Expense
    Liability
}

model Members {
  memberId         Int           @id @default(autoincrement())
  lastName         String        
  firstName        String
  gender           String
  birthDate        DateTime
  address          String
  occupation       String?
  contactNo        Int
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @default(now())

  @@map("members")

}

model Accounts {
  accountId       Int           @id @default(autoincrement())
  accountType     AccountTypes
  parentAccount   Int?
  debit           Float   
  credit          Float
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @default(now())

  @@map("accounts")
}

model Transactions {
  transactionId    BigInt       @id @default(autoincrement())
  transactionType  String

}
